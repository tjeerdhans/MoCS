@model IEnumerable<MoCS.Data.Entity.Assignment>
@{
    ViewBag.Title = "Assignments";
}

<h2>@ViewBag.Title</h2>

<table class="table table-condensed table-striped">
    <thead>
        <tr>
            <th>Assignment</th>
            <th>Friendly name</th>
            <th>Tagline</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var assignment in Model)
    {
        <tr>
            <td>@assignment.Name</td>
            <td>@assignment.FriendlyName</td>
            <td>@assignment.Tagline</td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                    using (Html.BeginForm("Delete", "Assignments", new { id = assignment.Id }))
                    {
                        @Html.AntiForgeryToken()
                        <a href="@Url.Action("Edit", new { id =  assignment.Id })" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-pencil" title="Edit this assignment"></span></a>
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this assignment?');" class="btn btn-default btn-sm" title="Delete this assignment"><span class="glyphicon glyphicon-trash" title="Delete this assignment"></span></button> @Html.ValidationSummary(true)
                    }
                }
            </td>
        </tr>
    }
</table>
@if (User.IsInRole("Admin"))
{
    <a href="@Url.Action("Add")" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-plus"></span> Add an assignment</a>
}